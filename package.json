{
  "author"      : "Andrew Reida",
  "name"        : "spacesynter",
  "version"     : "0.0.0",
  "description" : "An app for quickly launching other apps",
  "license"     : "MIT",
  "private"     : true,
  "repository"  : {
    "type" : "git",
    "url"  : "https://github.com/areida/spacesynter.git"
  },
  "scripts" : {
        "clean:build"   : "rm -rf ./build",
        "clean:dist"    : "rm -rf ./dist",
        "clean:server"  : "pm2 delete all",
        "dist:app"      : "APP_ENV=production NODE_ENV=production webpack -p",
        "dist:cookbooks": "mkdir dist && zip -r dist/cookbooks cookbooks",
        "dist:server"   : "APP_ENV=production NODE_ENV=production webpack --config webpack.server.js -p",
        "start:api"     : "pm2 start server/api.js",
        "start:app"     : "pm2 start server/app.js",
        "start:dev"     : "pm2 start server/dev.js",
        "start:all"     : "npm run start:api && npm run start:app && npm run start:dev",
        "watch:api"     : "webpack --config webpack.server.js --watch",
        "watch:app"     : "webpack --watch",

        "predist"           : "npm run clean",
        "predist:cookbooks" : "npm run clean",
        "prestart"          : "npm run clean",

        "clean" : "npm run clean:build && npm run clean:dist",
        "dist"  : "npm run dist:app && npm run dist:server && ./dist.sh",
        "start" : "npm run start:all && npm run trap && npm run watch:api",
        "trap"  : "trap 'pm2 delete all' 2"
  },
  "devDependencies": {
    "chai"                     : "1.9.1",
    "es5-shim"                 : "4.0.5",
    "karma"                    : "0.12.21",
    "karma-chrome-launcher"    : "0.1.4",
    "karma-firefox-launcher"   : "0.1.3",
    "karma-mocha"              : "0.1.7",
    "karma-phantomjs-launcher" : "0.1.4",
    "karma-sinon-chai"         : "0.3.0",
    "karma-sourcemap-loader"   : "0.3.3",
    "karma-webpack"            : "1.5.0",
    "mocha"                    : "1.21.4",
    "react-tools"              : "0.11.1",
    "sinon"                    : "1.10.3",
    "sinon-chai"               : "2.5.0",

    "babel-loader"                : "4.0.0",
    "css-loader"                  : "0.9.1",
    "extract-text-webpack-plugin" : "0.3.8",
    "file-loader"                 : "0.8.1",
    "html-webpack-plugin"         : "1.1.0",
    "json-loader"                 : "0.5.1",
    "jshint-loader"               : "0.8.1",
    "jsx-loader"                  : "0.11.2",
    "jsxhint-loader"              : "0.2.0",
    "raw-loader"                  : "0.5.1",
    "react-hot-loader"            : "1.2.5",
    "sass-loader"                 : "0.3.1",
    "style-loader"                : "0.8.3",
    "url-loader"                  : "0.5.5",
    "webpack"                     : "1.5.3",
    "webpack-dev-server"          : "1.7.0",
    "webpack-error-notification"  : "0.1.4"
  },
  "dependencies": {
    "classnames"      : "1.2.1",
    "fluxxor"         : "1.5.1",
    "immutable"       : "3.6.0",
    "lodash"          : "3.7.0",
    "q"               : "1.0.1",
    "react"           : "0.13.2",
    "react-router"    : "0.13.2",
    "store"           : "1.3.16",
    "synapse-common"  : "1.4.0",
    "synfrastructure" : "1.0.0",

    "blueimp-tmpl"    : "2.5.4",
    "body-parser"     : "1.12.0",
    "cookie-parser"   : "1.3.3",
    "connect-redis"   : "2.2.0",
    "docker.io"       : "0.9.8",
    "express"         : "4.11.2",
    "express-session" : "1.10.1",
    "localStorage"    : "1.0.3",
    "mongodb"         : "1.4.31",
    "mongoose"        : "3.8.23",
    "navigator"       : "1.0.1",
    "nginx-reload"    : "0.0.4",
    "request"         : "2.53.0",
    "socket.io"       : "1.3.4"
  }
}
